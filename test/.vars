#!/bin/zsh

autoload colors; colors
UP="\033[F"
DOWN="\033[B"
CLEAR="\033[K"

PASS="$fg[green]PASS$reset_color"
WARN="$fg[yellow]WARN$reset_color"
FAIL="$fg[red]FAIL$reset_color"
NOTE="$fg[cyan]NOTE$reset_color"

bold=$(tput bold)
undr=$(tput smul)
reset=$(tput sgr0)

PDESC="means all computations were stable."
WDESC="means LinBox computations were potentially numerically unstable."
FDESC="means a non-arithmetic error occurred in Python, Cython, or C++."
NDESC="reported timing information reflects ${undr}only${reset} model computation."

printf -v PASSDESC "%-5s %s %s" $PASS "" $PDESC
printf -v WARNDESC "%-5s %s %s" $WARN "" $WDESC
printf -v FAILDESC "%-5s %s %s" $FAIL "" $FDESC
printf -v NOTEDESC "%-5s %s %s" $NOTE "" $NDESC

echo $PASSDESC
echo $WARNDESC
echo $FAILDESC
echo $NOTEDESC
echo

# Table headers and widths; figuring out how wide these things were was very weird.
W=22
SCALE="${undr}${bold}SCALE  ${reset}"
DIM="${undr}${bold}DIM    ${reset}"
FIELD="${undr}${bold}FIELD  ${reset}"
PHAT="${undr}${bold}PHAT   ${reset}"
CELLS="${undr}${bold}CELLS  ${reset}"