#!/bin/zsh

autoload colors; colors
UP="\033[F"
DOWN="\033[B"
CLEAR="\033[K"

PASS="$fg[green]PASS$reset_color"
WARN="$fg[yellow]WARN$reset_color"
FAIL="$fg[red]FAIL$reset_color"

width=60
indent=2

PASSDESC=$(echo -e "A $PASS means all computations passed successfully without retries." | fold -s -w $width | sed "2,\$s/^/$(printf "%.0s " $(seq "${indent}"))/")
WARNDESC=$(echo -e "A $fg[yellow]WARN$reset_color results from potential numerical instability in LinBox." | fold -s -w $width | sed "2,\$s/^/$(printf "%.0s " $(seq "${indent}"))/")
FAILDESC=$(echo -e "A $fg[red]FAIL$reset_color results from an Exception in Python, Cython, or C++." | fold -s -w $width | sed "2,\$s/^/$(printf "%.0s " $(seq "${indent}"))/")